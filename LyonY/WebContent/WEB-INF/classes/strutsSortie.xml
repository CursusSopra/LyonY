<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />


	<package name="lyonYSorties" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<action name="sorties" class="fr.cursusSopra.action.SortiesAction"
			method="execute">
			<result name="success" type="tiles">sorties</result>
		</action>

		<action name="listeDesRestaurants" class="fr.cursusSopra.action.ListeDesRestaurantsAction"
			method="execute">
			<result name="success" type="tiles">listeDesRestaurants</result>
		</action>
		
		<action name="detailsRestaurant" class="fr.cursusSopra.action.DetailsRestaurantAction"
			method="executeDetailsRestaurant">
			<result name="success" type="tiles">detailsRestaurant</result>
			<result name="error">/views/sorties/bars/barsError.jsp</result>
		</action>

		<action name="listeDesNclubs" class="fr.cursusSopra.action.ListeDesNclubsAction"
			method="execute">
			<result name="success" type="tiles">listeDesNclubs</result>
		</action>
		
		<action name="detailsNclub" class="fr.cursusSopra.action.DetailsNclubAction"
			method="executeDetailsNclub">
			<result name="success" type="tiles">detailsNclub</result>
			<result name="error">/views/sorties/bars/barsError.jsp</result>
		</action>

		<action name="listeDesBars" class="fr.cursusSopra.action.ListeDesBarsAction"
			method="executeListeDesBars">
			<result name="success" type="tiles">listeDesBars</result>
			<result name="error">/views/sorties/bars/barsError.jsp</result>
		</action>

		<action name="detailsBar" class="fr.cursusSopra.action.DetailsBarAction"
			method="executeDetailsBar">
			<result name="success" type="tiles">detailsBar</result>
			<result name="error">/views/sorties/bars/barsError.jsp</result>
		</action>


	</package>

