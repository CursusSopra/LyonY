<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="lyonYSorties" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<action name="sorties" class="fr.cursusSopra.action.SortiesAction"
			method="execute">
			<result name="success" type="tiles">sorties</result>
		</action>

		<action name="restaurants" class="fr.cursusSopra.action.RestaurantsAction"
			method="execute">
			<result name="success" type="tiles">restaurants</result>
		</action>

		<action name="nclubs" class="fr.cursusSopra.action.NclubsAction"
			method="execute">
			<result name="success" type="tiles">nclubs</result>
		</action>

		<action name="listeDesBars" class="fr.cursusSopra.action.BarsAction"
			method="executeListeDesBars">
			<result name="success" type="tiles">listeDesBars</result>
			<result name="error">/views/sorties/bars/barsError.jsp</result>
		</action>


	</package>

