		<action name="" class="fr.cursusSopra.action.IndexAction"
			method="execute">
			<result name="success" type="tiles">index</result>
		</action>

		<action name="index" class="fr.cursusSopra.action.IndexAction"
			method="execute">
			<result name="success" type="tiles">index</result>
		</action>
		
		
		<action name="sorties" class="fr.cursusSopra.action.SortiesAction"
			method="execute">
			<result name="success" type="tiles">sorties</result>
		</action>
		
		
		<action name="bars" class="fr.cursusSopra.action.BarsAction"
			method="execute">
			<result name="success" type="tiles">bars</result>
		</action>
		
			
		<action name="restaurants" class="fr.cursusSopra.action.RestaurantsAction"
			method="execute">
			<result name="success" type="tiles">restaurants</result>
		</action>

		<action name="nclubs" class="fr.cursusSopra.action.NclubsAction"
			method="execute">
			<result name="success" type="tiles">nclubs</result>
		</action>
	

	</package>

