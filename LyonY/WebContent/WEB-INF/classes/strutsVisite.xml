<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="lyonYVisites" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<action name="visites" class="fr.cursusSopra.action.visites.VisitesAction"
			method="execute">
			<result name="success" type="tiles">visites</result>
		</action>
		
		<!-- MONUMENTS -->
		
		<!-- Affichage de la liste des monuments -->
		<action name="listeDesMonuments" class="fr.cursusSopra.action.visites.ListeDesMonumentsAction" method="execute">
			<result name="success" type="tiles">listeDesMonuments</result>
		</action>
		
 		<!-- Affichage des détails d'un monument -->
		<action name="detailsMonument" class="fr.cursusSopra.action.visites.ManageMonumentAction" method="executeDetailsMonument">
			<result name="success" type="tiles">detailsMonument</result>
		</action>
		
 		<!-- Formulaire de création d'un monument -->
		<action name="formCreationMonument" class="fr.cursusSopra.action.visites.ManageMonumentAction" method="execute">
			<result name="success" type="tiles">formCreationMonument</result>
		</action>
		<action name="creationMonument" class="fr.cursusSopra.action.visites.ManageMonumentAction" method="executeCreationMonument">
			<result name="success" type="redirectAction">listeDesMonuments</result>
		</action>
		
 		<!-- Formulaire de modification d'un monument -->
		<action name="formModifMonument" class="fr.cursusSopra.action.visites.ManageMonumentAction" method="executeFormModifMonument">
			<result name="success" type="tiles">formModifMonument</result>
		</action>
		<action name="modifMonument" class="fr.cursusSopra.action.visites.ManageMonumentAction" method="executeModifMonument">
			<result name="success" type="redirectAction">listeDesMonuments</result>
		</action>
		
		<!-- PLACEETPARCS -->
		
		<!-- Affichage de la liste des placeetparcs -->
		<action name="listeDesPlaceetparcs" class="fr.cursusSopra.action.visites.ListeDesPlaceetparcsAction" method="execute">
			<result name="success" type="tiles">listeDesPlaceetparcs</result>
		</action>
		
		<!-- Affichage des détails d'une place ou d'un parc -->
		<action name="detailsPlaceetparc" class="fr.cursusSopra.action.visites.ManagePlaceetparcAction" method="executeDetailsPlaceetparc">
			<result name="success" type="tiles">detailsPlaceetparc</result>
		</action>
		
 		<!-- Formulaire de création d'une place ou d'un parc -->
		<action name="formCreationPlaceetparc" class="fr.cursusSopra.action.visites.ManagePlaceetparcAction" method="execute">
			<result name="success" type="tiles">formCreationPlaceetparc</result>
		</action>
		<action name="creationPlaceetparc" class="fr.cursusSopra.action.visites.ManagePlaceetparcAction" method="executeCreationPlaceetparc">
			<result name="success" type="redirectAction">listeDesPlaceetparcs</result>
		</action>
		
 		<!-- Formulaire de modification d'une place ou d'un parc -->
		<action name="formModifPlaceetparc" class="fr.cursusSopra.action.visites.ManagePlaceetparcAction" method="executeFormModifPlaceetparc">
			<result name="success" type="tiles">formModifPlaceetparc</result>
		</action>
		<action name="modifPlaceetparc" class="fr.cursusSopra.action.visites.ManagePlaceetparcAction" method="executeModifPlaceetparc">
			<result name="success" type="redirectAction">listeDesPlaceetparcs</result>
		</action>
		
	</package>
</struts>